<a href="/users/sign_out">로그아웃</a>
<div class="container" style ="margin-top : 30px">
  
              <form action = "/board/create" method="POST" >
                <div class="form-group">
                  <input type="text" class="form-control" name="title" id="title" placeholder="제목을 입력하세요">
                </div>
                
                <div class="form-group">
                  <textarea class = 'form-control' rows = "15" name= "content"></textarea>
                </div>
               
                <button type="submit" class="btn btn-default">작성하기</button>
            </form>
        <hr>

        <% @posts.each do |post| %> 
        
        <strong><%= post.title %></strong> <br>
        <%= post.user.email %><br>
        <%= post.content %> <br>
        <%= post.created_at %> <hr>
        
        <% post.comments.each do |comment| %>
          <span> [ </span>    <%= comment.id %> <span>] - </span>   
        <%= comment.content %> <br>
        <%end%>  
        
        <p>댓글달기</p><br>
        <form action='/board/<%=post.id%>/comment_create' method='post'>
          <div class="form-group">
                <input type="text" class="form-control" name="content" id="title" placeholder="댓글을 입력하세요">
          </div>
          <button type="submit" class="btn btn-default">Submit</button> <hr>
        </form>
        
        <%end%>
        

</div>